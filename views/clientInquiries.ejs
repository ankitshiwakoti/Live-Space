<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Inquiries</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-3xl font-bold text-center text-blue-600 mb-6">Your Inquiries</h1>

        <!-- Open Inquiries -->
        <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
            <h2 class="text-2xl font-semibold text-green-600 border-b pb-2 mb-4">Open Inquiries</h2>
            <% if (openInquiries.length === 0) { %>
                <p class="text-gray-500">No open inquiries.</p>
            <% } else { %>
                <% openInquiries.forEach(inquiry => { %>
                    <div class="bg-green-50 p-4 rounded-lg mb-4 border-l-4 border-green-500">
                        <h3 class="text-lg font-semibold text-gray-700">Property: <%= inquiry.Property.Title %></h3>
                        <p><strong>Status:</strong> <%= inquiry.Status %></p>
                        <p><strong>Message:</strong> <%= inquiry.Message %></p>
                        <p><strong>Location:</strong> <%= inquiry.Property.Location.AddressLine1 %>, <%= inquiry.Property.Location.City %></p>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Closed Inquiries -->
        <div class="bg-white shadow-lg rounded-lg p-6">
            <h2 class="text-2xl font-semibold text-red-600 border-b pb-2 mb-4">Closed Inquiries</h2>
            <% if (closedInquiries.length === 0) { %>
                <p class="text-gray-500">No closed inquiries.</p>
            <% } else { %>
                <% closedInquiries.forEach(inquiry => { %>
                    <div class="bg-red-50 p-4 rounded-lg mb-4 border-l-4 border-red-500">
                        <h3 class="text-lg font-semibold text-gray-700">Property: <%= inquiry.Property.Title %></h3>
                        <p><strong>Status:</strong> <%= inquiry.Status %></p>
                        <p><strong>Message:</strong> <%= inquiry.Message %></p>
                        <p><strong>Location:</strong> <%= inquiry.Property.Location.AddressLine1 %>, <%= inquiry.Property.Location.City %></p>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
