<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Properties for Sale</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="bg-blue-500 text-white p-4 text-center">
        <h1 class="text-2xl font-bold">Properties for Sale</h1>
    </header>

    <main class="py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Property Cards Section -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

                <!-- Loop through properties -->
                <% properties.forEach(property => { %>
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <!-- Property Image (optional) -->
                        <img src="<%= property.imageUrl %>" alt="<%= property.title %>" class="w-full h-48 object-cover">

                        <!-- Property Details -->
                        <div class="p-4">
                            <h3 class="text-xl font-semibold mb-2"><%= property.title %></h3>
                            <p class="text-gray-700 text-base">Price: $<%= property.price %></p>
                            <p class="text-gray-600 text-sm mb-4">Location: <%= property.location %></p>

                            <!-- Buttons -->
                            <div class="flex justify-between">
                                <a href="/property/<%= property.id %>" class="bg-blue-500 text-white py-2 px-4 rounded-lg text-center">View</a>
                                <a href="/inquiry/<%= property.id %>" class="bg-green-500 text-white py-2 px-4 rounded-lg text-center">Inquiry</a>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-blue-500 text-white text-center py-4">
        <p>&copy; 2025 Property Listings</p>
    </footer>

</body>
</html>
